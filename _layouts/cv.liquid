---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if page.cv_pdf %}
        <a href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}" target="_blank" rel="noopener noreferrer" class="float-right">
          <i class="fa-solid fa-file-pdf"></i>
        </a>
      {% endif %}
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    {% if page.cv_pdf %}
      <div class="pdf-container" style="width: 100%; height: 100vh; overflow: auto;">
        <iframe src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}" style="width: 100%; height: 100%;" frameborder="0">
          This browser does not support PDFs. Please download the PDF to view it:
          <a href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}">Download PDF</a>.
        </iframe>
      </div>
    {% else %}
      <p>No PDF available.</p>
    {% endif %}
  </article>
</div>
